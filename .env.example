# Application
NODE_ENV=development
APP_NAME=RBAC Microservice
PORT=3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/rbac_db?schema=public"

# JWT Configuration (IMPORTANT: Change these secrets in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_REFRESH_EXPIRES_IN=7d

# Protocol Configuration
ENABLE_GRAPHQL=true
ENABLE_REST=true
ENABLE_GRPC=false
ENABLE_MESSAGING=false

# GraphQL Configuration
GRAPHQL_PLAYGROUND=true
GRAPHQL_DEBUG=true

# gRPC Configuration (if enabled)
GRPC_HOST=0.0.0.0
GRPC_PORT=5000

# RabbitMQ (if messaging enabled)
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_QUEUE=rbac_queue

# Kafka (if messaging enabled)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=rbac-service
KAFKA_GROUP_ID=rbac-group

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
